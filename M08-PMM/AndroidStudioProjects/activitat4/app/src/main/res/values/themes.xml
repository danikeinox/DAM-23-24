<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Activitat4" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Titol">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_titol</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="Boto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/alt_boto</item>
        <item name="android:layout_margin">@dimen/marge_boto</item>
        <item name="android:textSize">@dimen/text_boto</item>
        <item name="android:background">@drawable/botons</item>
        <item name="android:onClick">juguemHi</item>
    </style>
    <style name="Radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:radius">@dimen/r_boto</item>
        <item name="android:textSize">@dimen/text_radio</item>
        <item name="android:alpha">0.2</item>
    </style>
    <style name="Theme.Activitat4" parent="Base.Theme.Activitat4" />
</resources>